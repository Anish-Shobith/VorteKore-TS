<!DOCTYPE html>
<html lang="en">
<%- include ("inc/head") %>

<body>
    <%- include("inc/nav") %>
    <section class="hero is-fullheight">
        <div class="align-middle">
            <% if(guilds) {%>
            <h3>Select a server!</h3>
            <div class="colums is-multiline center">
                <% guilds.forEach((guild) => { %>
                <div class="column">
                    <figure class="image is-128x128">
                        <% if(guild.icon) {%>

                        <a href="<%= guild.joined ? `/guilds/${guild.id}` : invite %>"><img class="is-rounded is-hoverable"
                                src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>"></a>
                        <% } else {%>

                        <a href="<%= guild.joined ? `/guilds/${guild.id}` : invite %>"><img title="<%= guild.name %>"
                                style="border: 2px solid black;" class="is-rounded is-hoverable"
                                src="https://i.imgur.com/EuNEjGk.png"></a>
                        <% } %>

                    </figure>
                </div>

                <% }) %>
                <% } %>
            </div>
        </div>
    </section>
</body>


</html>