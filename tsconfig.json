{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2019",
    "module": "commonjs",
    "outDir": "dist/",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "declaration": false,
    "disableSizeLimit": true,
    "emitDecoratorMetadata": true
  }
}